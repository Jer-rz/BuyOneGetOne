/vendor/ruby
.env
# Ignore system / OS files
.DS_Store
Thumbs.db

# Ignore log files and temp files
/log/*
/tmp
/tmp/**/*

# Ignore PID and socket files
/tmp/pids/*
/tmp/sockets/*
