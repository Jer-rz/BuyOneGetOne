/public/system/*
/public/uploads/*
/storage/*   # if using local storage for ActiveStorage

# Ignore compiled assets
/public/assets/*
/public/packs/*
/public/packs-test/*
/node_modules/

# Ignore test or coverage artifacts
/coverage/
/spec/tmp/
/tmp/*

# Ignore editor or IDE config
.idea/
/.vscode/
/*.sublime-project
/*.sublime-workspace

